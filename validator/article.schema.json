{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://nodeacademy.globant.com/article.schema.json",
    "title": "Article",
    "description": "Article Schema",
    "type": "object",
    "properties": {
        "id": {
          "description": "Unique ID's Article",
          "type": "string",
          "minLength": 36,
          "maxLength": 36,
          "pattern": "^(?!\\s*$).+"
        }, 
        "title": {
            "description": "Title's Article",
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "pattern": "^(?!\\s*$).+"
        },
        "author": {
            "description": "Author's Article",
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "pattern": "^(?!\\s*$).+"
        },
        "modifiedAt": {
            "description": "Creation or Modification Date",
            "type": "string",
            "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
        },
        "publishedAt": {
            "description": "Publish Date",
            "type": "string",
            "pattern": "^\\d{2}/\\d{2}/\\d{4}$"
        },
        "url": {
            "description": "URL's Article",
            "type": "string",
            "pattern": "^https://.*$"
        },
        "keywords": {
            "description": "Keyword's Article",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "maxItems": 3
        },
        "readMins": {
            "description": "time to read in mins",
            "type": "number",
            "minimum": 1,
            "maximum": 20
        },
        "source": {
            "description": "Platform source",
            "type": "string",
            "enum": ["ARTICLE", "BLOG", "TWEET", "NEWSPAPER"]
        }
      },
      "required": [ "id", "title", "author", "modifiedAt", "keywords", "readMins", "source" ],
      "additionalProperties": false
  }